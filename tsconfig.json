{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".", 
    "paths": {
      "@/*": ["src/*"],
      "@shared/*": ["src/lib/shared/*"],
      "@plan-management/*": ["src/lib/modules/plan-management/*"],
      "@tenant-management/*": ["src/lib/modules/tenant-management/*"],
      "@user-management/*": ["src/lib/modules/user-management/*"],
      "@role-management/*": ["src/lib/modules/role-management/*"],
    },
    "types": [
        "./cloudflare-env.d.ts",
        "node",
        "jest",
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
